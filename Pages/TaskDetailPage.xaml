<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TarefasApp.Pages.TaskDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalhes">

    <ScrollView Padding="16">
        <VerticalStackLayout Spacing="12">
            <Label Text="{Binding Title}" FontSize="22" FontAttributes="Bold" />
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Descrição: " FontAttributes="Bold"/>
                        <Span Text="{Binding Description}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Criada em: " FontAttributes="Bold"/>
                        <Span Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy HH:mm}'}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Prioridade: " FontAttributes="Bold"/>
                        <Span Text="{Binding Priority}"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <HorizontalStackLayout Spacing="12" Margin="0,16,0,0">
                <Button Text="Editar" Clicked="OnEditClicked" />
                <Button Text="Excluir" BackgroundColor="{DynamicResource Red500}" TextColor="Red" Clicked="OnDeleteClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
